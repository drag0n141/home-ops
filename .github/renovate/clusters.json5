{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for main cluster",
      "matchFileNames": [
        "**/kubernetes/main/**",
        "**/ansible/main/**",
        "**/terraform/main/**"
      ],
      "additionalBranchPrefix": "main-"
    },
    {
      "description": "Separate PRs for nas cluster",
      "matchFileNames": [
        "**/kubernetes/nas/**",
        "**/ansible/nas/**",
        "**/terraform/nas/**"
      ],
      "additionalBranchPrefix": "nas-"
    }
  ]
}
