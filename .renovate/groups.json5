{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "1Password Connect Group",
      groupName: "1Password Connect",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["1password/connect"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      changelogUrl: "https://github.com/1Password/connect/blob/main/CHANGELOG.md",
      minimumGroupSize: 2,
    },
    {
      description: "Actions Runner Controller Group",
      groupName: "Actions Runner Controller",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["gha-runner-scale-set"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Barman Cloud Group",
      groupName: "Barman Cloud",
      matchDatasources: ["docker", "github-releases"],
      matchPackagePatterns: ["plugin-barman-cloud"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Flux Operator Group",
      groupName: "Flux Operator",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["flux-operator", "flux-instance"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 4,
    },
    {
      description: "Guacamole Group",
      groupName: "Guacamole",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["guacamole"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Guardian Group",
      groupName: "Guardian",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["guardian"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Immich Group",
      groupName: "Immich",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["immich"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      sourceUrl: "https://github.com/immich-app/immich",
      minimumGroupSize: 2,
    },
    {
      description: "Intel Device Plugins Group",
      groupName: "Intel-Device-Plugins",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["intel-device-plugins"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Patchmon Group",
      groupName: "Patchmon",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["patchmon"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Rook-Ceph Group",
      groupName: "Rook-Ceph",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["rook.ceph"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Talos Group",
      groupName: "Talos",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["siderolabs/talosctl", "siderolabs/installer"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 1,
    },
    {
      description: "Teleport Group",
      groupName: "Teleport",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["teleport-cluster", "teleport-kube-agent"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    }
  ]
}
